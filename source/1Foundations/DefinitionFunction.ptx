    <label anchor="(-mid,top)" alignment="center">
      A
    </label>
    <label anchor="(-mid,0)" alignment="center">
      B
    </label>
    <label anchor="(-mid,-top)" alignment="center">
      C
    </label>
  </coordinates>
</diagram>
