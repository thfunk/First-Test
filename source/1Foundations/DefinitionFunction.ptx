  <definition> top=1.75 </definition>
  <definition> mid=2 </definition>
  <definition> top=1.75 </definition>
  <definition> mid=2 </definition> 
  <coordinates bbox="(-4,-4,4,4)">
     <ellipse center="(-mid,0)" axes="(1.5,3)" stroke="black"/>
     <ellipse center="(mid,0)" axes="(1.5,3)" stroke="black"/>
     <line endpoints="((-mid+.2,0), (mid-.6,top))" stroke="blue"
	  thickness="2" arrows="1"/>
    <line endpoints="((-mid+.2,top), (mid-.6,-top))" stroke="blue"
	  thickness="2" arrows="1"/>
    <line endpoints="((-mid+.2,-top), (mid-.5,0))" stroke="blue"
	  thickness="2" arrows="1"/>
    <label anchor="(mid,top)" alignment="center">
      Apple
    </label>
    <label anchor="(mid,0)" alignment="center">
      Pear
    </label>
    <label anchor="(mid,-top-.1)" alignment="center">
      Grape
